<h1>Editing Books</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>





  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<span>
  <%= link_to "Show", book_path(@book.id) %>
</span>

<span>
  <%= link_to "Back", books_path %>
</span>
<% end %>
